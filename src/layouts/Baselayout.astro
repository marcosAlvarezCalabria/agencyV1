---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { useTranslations } from "../i18n/utils.js";

// Detecta el idioma desde la URL
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Agencia Cusco</title>
    <link rel="icon" type="image/svg+xml" href="/assets/images/logo1.JPG" />
    <meta name="description" content="Agencia de viajes y excursiones en Cusco" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  </head>
  <body class="bg-bg text-negro">
    <Header lang={lang} t={t} />
    <main>
      <slot />
    </main>
  </body>
</html>
