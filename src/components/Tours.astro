---
import TourCard from './TourCard.astro';
const { tours, t } = Astro.props;
---
<section id="tours" class="py-16 px-4 bg-gray-50">
  <div class="container mx-auto">
    <h2 class="text-4xl font-bold text-center mb-10 text-primary">{t('tours.title')}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {tours.map((tour) => (
        <TourCard {...tour} t={t} />
      ))}
    </div>
  </div>
</section>
