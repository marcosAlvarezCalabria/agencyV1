<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const heroTitle = document.getElementById('hero-title');
    const preloader = document.getElementById('video-preloader');
    const heroVideo = document.getElementById('hero-video');

    if (heroVideo && preloader && heroTitle) {
      let contentHasBeenShown = false;

      const showContent = () => {
        if (contentHasBeenShown) return; // Evita que se ejecute dos veces
        contentHasBeenShown = true;

        // Oculta el preloader
        preloader.classList.add('opacity-0');
        setTimeout(() => {
          preloader.style.display = 'none';
        }, 500); // Coincide con la duración de la transición

        // Muestra el texto un poco después de que el preloader empiece a desaparecer
        setTimeout(() => {
          heroTitle.classList.remove('opacity-0', 'translate-y-4');
        }, 300); // Retraso más crto para una transición fluida
      };

      // Espera a que el video esté listo para reproducirse
      heroVideo.addEventListener('canplay', showContent, { once: true });

      // Fallback: si el video tarda más de 4 segundos, muestra todo de todos modos
      setTimeout(showContent, 4000);
    }
    
    // --- Lógica del video del Hero ---
    if (heroVideo) {
      // Lógica de reproducción del video
      heroVideo.loop = false;
      heroVideo.currentTime = 0;
      heroVideo.addEventListener('ended', () => {
        heroVideo.pause();
        heroVideo.currentTime = heroVideo.duration;
      });
    }

    // --- Lógica de videos en las Cards ---
    const cardVideos = document.querySelectorAll('.card-video');
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          const video = entry.target;
          if (entry.isIntersecting) {
            video.play();
          } else {
            video.pause();
          }
        });
      }, { threshold: 0.3 }); // 30% visible para activar

      cardVideos.forEach(video => {
        observer.observe(video);
      });
    } else {
      // Fallback: reproduce todos si no hay soporte
      cardVideos.forEach(video => video.play());
    }
  });
</script>