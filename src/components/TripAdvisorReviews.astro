---
const { embedUrl = "" } = Astro.props;
---

{embedUrl && (
  <section class="py-10 bg-white">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-green-900 mb-6">
        Opiniones de nuestros viajeros
      </h2>
      <div class="shadow-md rounded-md overflow-hidden border border-gray-200">
        <iframe
          src={embedUrl}
          width="100%"
          height="350"
          frameborder="0"
          scrolling="no"
          loading="lazy"
        ></iframe>
      </div>
    </div>
  </section>
)}
