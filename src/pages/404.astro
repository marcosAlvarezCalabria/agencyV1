---
// Página 404 personalizada con imagen y estilos mejorados
import ErrorLayout from '../layouts/ErrorLayout.astro';
---
<ErrorLayout>
  <div class="flex flex-col items-center justify-center min-h-screen bg-white text-[#b64926] p-4 font-sans">
    <img src="/assets/images/img404.png" alt="404" class="w-64 md:w-80 max-w-[320px] md:max-w-[400px] mb-4 rounded-lg shadow-md border-2 border-[#d2a530] bg-white" loading="lazy" />
    <h1 class="text-3xl md:text-4xl font-black mb-1 text-[#b64926] drop-shadow-sm tracking-tight">404</h1>
    <p class="text-base md:text-lg mb-4 text-[#372212] font-semibold text-center max-w-xs md:max-w-sm">¡Ups! La página que buscas no existe o fue movida.</p>
    <a href="/" class="bg-[#d2a530] text-white px-5 py-2 rounded-lg font-bold shadow hover:bg-[#b88a2a] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#b88a2a] focus:ring-offset-2">Volver al inicio</a>
  </div>
</ErrorLayout>
