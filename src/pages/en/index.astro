---
import Baselayout from '../../layouts/Baselayout.astro';
import Hero from '../../components/Hero.astro';
import toursEn from '../../data/tours.en.json';
import { useTranslations } from '../../i18n/utils.js';

const t = useTranslations('en');

// SEO y lang din√°mico para el layout
const props = {
  ...Astro.props,
  lang: 'en',
  seo: {
    title: 'Cusco Travel Agency | Tours and Trips',
    description: 'Travel agency in Cusco. Discover the best tours and experiences in Peru.',
    hreflangs: [
      { lang: 'en', url: '/en' },
      { lang: 'es', url: '/' }
    ]
  },
  t
};
---
<Baselayout {...props}>
  <Hero t={t} tours={toursEn} />
</Baselayout>