---
import Baselayout from '../../layouts/Baselayout.astro';
import toursEn from '../../data/tours.en.json';
import TourCard from '../../components/TourCard.astro';
import ToursCarousel from '../../components/ToursCarousel.astro';

// Define props intermedios
const lang = 'en';
const seo = {
  title: 'Our Tours | Agencia Cusco',
  description: 'Discover our best tours in Cusco and Peru. Adventure, culture and more with Agencia Cusco.',
  hreflangs: [
    { lang: 'en', url: '/tours' },
    { lang: 'es', url: '/es/tours' }
  ]
};
---
<Baselayout lang={lang} seo={seo}>
  <section id="tours" class="py-16 px-4 min-h-screen relative overflow-hidden">
    <div class="fixed inset-0 w-full h-full -z-10" style="background: linear-gradient(90deg, #bfa76a 0%, #2d2320 100%);"></div>
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-10 text-primary">Our Tours</h2>
      <div class="block md:hidden">
        <ToursCarousel tours={toursEn} lang={lang} t={(key) => undefined} />
      </div>
      <div class="hidden md:grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {toursEn.map(tour => (
          <div class="rounded-2xl shadow-xl bg-white/80 backdrop-blur-md hover:shadow-2xl transition-all duration-200">
            <TourCard tour={tour} lang="en" t={(key) => undefined} />
          </div>
        ))}
      </div>
    </div>
  </section>
</Baselayout>

