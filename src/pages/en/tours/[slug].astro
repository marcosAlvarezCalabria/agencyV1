---
// Dynamic tour page in English
import Baselayout from '../../../layouts/Baselayout.astro';

export async function getStaticPaths() {
  const tours = (await import('../../../data/tours.en.json')).default;
  return tours.map(tour => ({ params: { slug: tour.slug } }));
}

const { slug } = Astro.params;
const tours = (await import('../../../data/tours.en.json')).default;

let tour = tours.find(t => t.slug === slug);
// Si no tiene 'images' pero s√≠ 'image', crear array 'images' con la imagen √∫nica
if (tour && !tour.images && tour.image) {
  tour = {
    ...tour,
    images: [tour.image],
    itinerary: tour.itinerary || [],
    not_included: tour.not_included || [],
    recommendations: tour.recommendations || []
  };
}

if (!tour) {
  throw new Error('Tour not found');
}

// SEO and lang for layout
const lang = 'en';
const seo = {
  title: `${tour.name} | Cusco Agency`,
  description: tour.description,
  hreflangs: [
    { lang: 'es', url: `/es/tours/${slug}` },
    { lang: 'en', url: `/tours/${slug}` }
  ]
};
---

<Baselayout lang={lang} seo={seo}>
  <section class="w-full px-2 md:px-6 lg:px-10 py-10 relative overflow-hidden">
    <div class="fixed inset-0 w-full h-full -z-10" style="background: linear-gradient(90deg, #f5e7c5 0%, #f5e7c5 65%, #b89b7b 100%);"></div>
    <div class="tour-detail-flex">
      {/* Gallery left on desktop */}
      {tour.images && tour.images.length > 0 && (
        <aside class="tour-gallery-column hidden md:flex flex-col w-[38vw] max-w-[650px] min-w-[320px] h-[85vh] sticky top-24 self-start mr-6 pr-2 lg:pr-4">
          <div class="gallery-main-img-wrap mb-3" style="position:relative;">
            <span id="mainImgLoader" class="img-loader-overlay"></span>
            <img id="mainDesktopTourImg" src={tour.images[0]} alt={tour.name + ' main'} class="gallery-main-img" loading="lazy"
              onload="this.previousElementSibling.style.display='none'" onerror="this.previousElementSibling.style.display='flex'" />
          </div>
          {tour.images.length > 1 && (
            <div id="desktopThumbCarousel" class="gallery-thumbs-row flex gap-2 overflow-x-auto pb-1" style="scrollbar-width: none; -ms-overflow-style: none;">
              {tour.images.map((img, idx) => (
                <div class="gallery-thumb-wrap" style="position:relative;">
                  <span class="img-loader-overlay img-thumb-loader"></span>
                  <img src={img} alt={tour.name + ' thumbnail ' + (idx+1)} class="gallery-thumb-img" tabindex="0" loading="lazy"
                    onclick={`
                      document.getElementById('mainDesktopTourImg').src='${img}';
                      Array.from(this.parentNode.parentNode.querySelectorAll('.gallery-thumb-img')).forEach(el=>el.style.border='1.5px solid #ffe08233');
                      this.style.border='2.5px solid #d2a530';
                      this.previousElementSibling.style.display='flex';
                      document.getElementById('mainImgLoader').style.display='flex';
                    `}
                    onload="this.previousElementSibling.style.display='none'" onerror="this.previousElementSibling.style.display='flex'"
                    style={idx === 0 ? 'border:2.5px solid #d2a530' : 'border:1.5px solid #ffe08233'}
                  />
                </div>
              ))}
            </div>
          )}
        </aside>
      )}
      {/* Scrollable text column right */}
      <main class="tour-detail-content grow">
        <h1 class="text-3xl md:text-4xl font-extrabold text-[#b64926] mb-2">{tour.name}</h1>
        <span class="inline-block bg-[#d2a530] text-white px-3 py-1 rounded-lg font-bold text-lg mb-2">${tour.price}</span>
        <p class="text-[#372212] text-lg mb-4">{tour.description}</p>
        <div class="mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b64926]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 10c-4.41 0-8-1.79-8-4V6c0-2.21 3.59-4 8-4s8 1.79 8 4v8c0 2.21-3.59 4-8 4z" /></svg>
          <span class="font-semibold text-[#b64926]">Duration:</span> {tour.duration}
        </div>
        {tour.itinerary && (
          <div class="mb-4">
            <div class="flex items-center gap-2 mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b64926]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a4 4 0 014-4h4m0 0V7m0 4l-4-4-4 4" /></svg>
              <span class="font-semibold text-[#b64926]">Itinerary:</span>
            </div>
            <ul class="list-decimal list-inside text-[#372212]">
              {tour.itinerary.map(day => (
                <li class="mb-1">
                  <span class="font-bold">{day.day}:</span> <span class="italic">{day.title}</span> ‚Äì {day.description}
                </li>
              ))}
            </ul>
          </div>
        )}
        <div class="mb-4">
          <div class="flex items-center gap-2 mb-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b64926]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            <span class="font-semibold text-[#b64926]">Includes:</span>
          </div>
          <ul class="list-disc list-inside text-[#372212]">
            {tour.includes.map(item => <li>‚úÖ {item}</li>)}
          </ul>
        </div>
        {tour.not_included && (
          <div class="mb-4">
            <div class="flex items-center gap-2 mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b64926]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
              <span class="font-semibold text-[#b64926]">Not included:</span>
            </div>
            <ul class="list-disc list-inside text-[#372212]">
              {tour.not_included.map(item => <li>‚ùå {item}</li>)}
            </ul>
          </div>
        )}
        {tour.recommendations && (
          <div class="mb-4">
            <div class="flex items-center gap-2 mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b64926]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 20c4.418 0 8-1.79 8-4V6c0-2.21-3.582-4-8-4S4 3.79 4 6v10c0 2.21 3.582 4 8 4z" /></svg>
              <span class="font-semibold text-[#b64926]">Recommendations:</span>
            </div>
            <ul class="list-disc list-inside text-[#372212]">
              {tour.recommendations.map(item => <li>üí° {item}</li>)}
            </ul>
          </div>
        )}
        <!-- Floating back button, icon only, bottom left -->
        <a href="/en/tours" class="fixed left-6 bottom-8 z-50 bg-[#d2a530] hover:bg-[#b64926] text-white font-bold p-4 rounded-full shadow-xl transition-all duration-200 flex items-center justify-center text-lg" style="box-shadow:0 4px 24px 0 rgba(166,124,0,0.13);">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </a>
      </main>
      {/* Mobile gallery */}
      {tour.images && tour.images.length > 0 && (
        <div class="md:hidden flex flex-col items-center w-full mb-8">
          <img id="mainTourImg" src={tour.images[0]} alt={tour.name + ' main'} class="rounded-xl w-full h-56 object-cover mb-2 transition-all duration-300" loading="lazy" />
          <div id="miniCarousel" class="flex gap-2 justify-start mt-2 overflow-x-auto w-full pb-2" style="scrollbar-width: none; -ms-overflow-style: none;">
            {tour.images.map((img, idx) => (
              <img
                src={img}
                alt={tour.name + ' thumbnail ' + (idx+1)}
                class="rounded-lg w-16 h-16 object-cover border-2 border-transparent cursor-pointer transition-all duration-200 flex-shrink-0"
                aria-label={`View image ${idx+1} of ${tour.images.length}`}
                tabindex="0"
                style={idx === 0 ? 'border-color:#d2a530' : 'border-color:transparent'}
                loading="lazy"
                onclick={`
                  document.getElementById('mainTourImg').src='${img}';
                  Array.from(this.parentNode.children).forEach(el=>el.style.borderColor='transparent');
                  this.style.borderColor='#d2a530';
                  // Center active thumbnail in carousel
                  const carousel = document.getElementById('miniCarousel');
                  const rect = this.getBoundingClientRect();
                  const crect = carousel.getBoundingClientRect();
                  carousel.scrollBy({
                    left: rect.left - crect.left - crect.width/2 + rect.width/2,
                    behavior: 'smooth'
                  });
                `}
                onkeydown={`if(event.key==='Enter'||event.key===' '){this.click();}`}
              />
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</Baselayout>
<style>
  .tour-detail-flex {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  @media (min-width: 768px) {
    .tour-detail-flex {
      flex-direction: row;
      align-items: flex-start;
      gap: 2rem;
      padding-left: 0.25rem;
      padding-right: 0.25rem;
    }
    @media (min-width: 1024px) {
      .tour-detail-flex {
        padding-left: 1rem;
        padding-right: 1rem;
      }
    }
  }
  .tour-gallery-column {
    position: sticky;
    top: 6.5rem;
    align-self: flex-start;
    max-height: 80vh;
    background: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-right: 1.5rem;
    margin-left: 0;
  }
  .gallery-main-img-wrap {
    width: 100%;
    aspect-ratio: 4/3;
    background: #fff;
    border-radius: 1.1rem;
    box-shadow: 0 2px 12px 0 rgba(166,124,0,0.08);
    border: 1.5px solid #ffe08233;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .gallery-main-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1.1rem;
    background: #fff;
    transition: transform 0.18s;
  }
  .gallery-main-img:hover {
    transform: scale(1.03);
    box-shadow: 0 4px 18px 0 rgba(166,124,0,0.13);
  }
  .gallery-thumbs-row {
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    overflow-x: auto;
    scrollbar-width: thin;
    scrollbar-color: #ffe082 #fffde7;
  }
  .gallery-thumb-wrap {
    flex: 0 0 auto;
    width: 70px;
    aspect-ratio: 1/1;
    background: #fff;
    border-radius: 0.7rem;
    box-shadow: 0 1px 6px 0 rgba(166,124,0,0.07);
    border: 1.2px solid #ffe08233;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: box-shadow 0.15s;
  }
  .gallery-thumb-wrap:hover {
    box-shadow: 0 2px 12px 0 rgba(166,124,0,0.13);
  }
  .gallery-thumb-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.7rem;
    background: #fff;
    transition: transform 0.15s;
  }
  .gallery-thumb-img:hover {
    transform: scale(1.06);
  }
  .tour-detail-content {
    min-width: 0;
    width: 100%;
    max-width: 900px;
    margin-left: 0;
    margin-right: 0;
    padding-bottom: 2rem;
    overflow-y: auto;
    padding-left: 0.25rem;
    padding-right: 0.25rem;
  }
  @media (min-width: 1024px) {
    .tour-detail-content {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* Loader overlay y animaci√≥n logo parpadeante */
  .img-loader-overlay {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    background: rgba(255,255,255,0.7);
  }
  .img-loader-overlay:before {
    content: "";
    display: block;
    width: 54px;
    height: 54px;
    background: url('/assets/images/logoInkasTravel.png') center center no-repeat;
    background-size: contain;
    animation: logo-blink 1.2s linear infinite;
    opacity: 0.85;
  }
  .img-thumb-loader:before {
    width: 32px;
    height: 32px;
  }
  @keyframes logo-blink {
    0%, 100% { opacity: 0.85; }
    50% { opacity: 0.2; }
  }
</style>

