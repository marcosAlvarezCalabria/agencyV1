---
import Baselayout from '../../layouts/Baselayout.astro';
import toursEs from '../../data/tours.es.json';
import TourCard from '../../components/TourCard.astro';
import ToursCarousel from '../../components/ToursCarousel.astro';

const lang = 'es';
const seo = {
  title: 'Nuestros Tours | Agencia Cusco',
  description: 'Descubre los mejores tours en Cusco y Perú. Aventura, cultura y más con Agencia Cusco.',
  hreflangs: [
    { lang: 'es', url: '/es/tours' },
    { lang: 'en', url: '/tours' }
  ]
};
---

<Baselayout lang={lang} seo={seo}>
  <section id="tours" class="py-16 px-4 bg-white">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-10 text-primary">Nuestros Tours</h2>
      <div class="block md:hidden">
        <ToursCarousel tours={toursEs} lang={lang} t={(key) => undefined} />
      </div>
      <div class="hidden md:grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {toursEs.map(tour => (
          <TourCard tour={tour} lang="es" t={(key) => undefined} />
        ))}
      </div>
    </div>
  </section>
</Baselayout>

