---
//index.astro en español 

import BaseLayout from '../layouts/Baselayout.astro';
import Hero from '../components/Hero.astro';
import TripAdvisorReviews from '../components/TripAdvisorReviews.astro';
import { useTranslations } from '../i18n/utils.js';
import toursEs from '../data/tours.es.json';

const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const t = useTranslations(lang);
const tripAdvisorEmbedUrl = ""; // Pega aquí el embedUrl de TripAdvisor cuando lo tengas
---

<BaseLayout>
  <Hero t={t} tours={toursEs} />
  <TripAdvisorReviews embedUrl={tripAdvisorEmbedUrl} />
</BaseLayout>
